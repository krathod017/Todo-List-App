<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>To-Do List</h1>

    <!-- Task Form -->
    <form action="/add" method="POST" class="task-form">
      <input type="text" name="title" placeholder="Enter Task Title" required>
      <textarea name="description" rows="2" placeholder="Enter Task Description"></textarea>
      <button type="submit">Add Task</button>
    </form>

    <!-- Task List -->
    <ul class="task-list">
      <% tasks.forEach(task => { %>
        <li class="<%= task.completed ? 'completed' : '' %>">
          <h3><%= task.title %></h3>
          <p><%= task.description || 'No description provided.' %></p>
          <div class="action-buttons">
            <form action="/complete/<%= task.id %>" method="POST" class="inline-form">
              <button type="submit" class="complete-btn">Mark as Complete</button>
            </form>
            <form action="/edit/<%= task.id %>" method="POST" class="inline-form">
              <button type="submit">Edit</button>
            </form>
            <form action="/delete/<%= task.id %>" method="POST" class="inline-form">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
